%h1 Listing items

%table
  %thead
    %tr
      %th Name
      %th Description
      %th Starting bid
      %th Celeb
      %th
      %th
      %th
      
  %tbody
    - @items.each do |item|
      %tr
        %td= item.name
        %td= item.description
        %td= item.starting_bid
        %td= item.celeb_id
        %td= link_to 'Show', item
        %td= link_to 'Edit', edit_item_path(item)
        %td= link_to 'Destroy', item, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

